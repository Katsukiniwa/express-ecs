generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int            @id @default(autoincrement())
  created_at DateTime       @default(now()) @db.Timestamp(6)
  updaetd_at DateTime       @default(now()) @db.Timestamp(6)
  author     authors?
  account    user_accounts?
}

model user_accounts {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  hashed_password String   @unique @map("hashedPassword")
  created_at      DateTime @default(now()) @db.Timestamp(6)
  updaetd_at      DateTime @default(now()) @db.Timestamp(6)
  user_id         Int      @unique
  user            users    @relation(fields: [user_id], references: [id])
}

model authors {
  id           Int            @id @default(autoincrement())
  name         String
  icon         String
  created_at   DateTime       @default(now()) @db.Timestamp(6)
  updaetd_at   DateTime       @default(now()) @db.Timestamp(6)
  user_id      Int            @unique
  description  String
  user         users          @relation(fields: [user_id], references: [id])
  draft_novels draft_novels[]
  novels       novels[]
}

model novels {
  id        Int     @id @default(autoincrement())
  title     String
  author_id Int     @map("authorId")
  author    authors @relation(fields: [author_id], references: [id])

  @@index([author_id], name: "authorId")
}

model draft_novels {
  id        Int     @id @default(autoincrement())
  title     String?
  author_id Int
  author    authors @relation(fields: [author_id], references: [id])

  @@index([author_id], name: "author_id")
}
